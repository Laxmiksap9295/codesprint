            <Title text="Finance" level="H5"/>
            <ObjectStatus text="H" state="Error"/>
          </HBox>
          <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
            <Text text="Progress"/>
            <Text text="{progress}%"/>
          </HBox>
          <ProgressIndicator percentValue="{progress}" showValue="false" state="Information"/>
          <VBox class="sapUiSmallMarginTop">
            <HBox justifyContent="SpaceBetween"><Text text="Resolved"/><Text text="{resolved}"/></HBox>
            <HBox justifyContent="SpaceBetween"><Text text="In Progress"/><Text text="{inProgress}"/></HBox>
            <HBox justifyContent="SpaceBetween"><Text text="Pending"/><Text text="{pending}"/></HBox>
            <HBox justifyContent="SpaceBetween"><Text text="Total"/><Text text="{total}"/></HBox>
          </VBox>
        </VBox>          
      </Panel>

